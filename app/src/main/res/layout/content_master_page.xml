<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_screen_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.braintech.cmyco.activity.MasterPageActivity"
    tools:showIn="@layout/activity_master_page">

    <LinearLayout
        android:id="@+id/rly_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_team_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext"
            android:padding="@dimen/padding_size"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:text="TEAM"
            android:gravity="left"
            android:textSize="@dimen/txt_normal_size" />


        <TextView
            android:id="@+id/txt_active_users"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext"
            android:padding="@dimen/padding_size"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:text="ACTIVE USERS"
            android:textSize="@dimen/txt_normal_size" />


    </LinearLayout>

    <ListView
        android:id="@+id/listViewPoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rly_top"
        android:layout_marginTop="20dp"
        android:dividerHeight="0dp"
        android:divider="@android:color/white"
        android:listSelector="@android:color/transparent">

    </ListView>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_selector"
        android:text="@string/btn_continue"
        android:textColor="@color/white" />

</RelativeLayout>
