<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llay_activeUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_team_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext"
            android:padding="@dimen/padding_size"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_normal_size" />


        <TextView
            android:id="@+id/txt_active_users"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext"
            android:padding="@dimen/padding_size"
            android:text="ACTIVE USERS"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_normal_size" />

    </LinearLayout>


    <TextView
        android:id="@+id/txt_playCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/llay_activeUser"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_edittext"
        android:gravity="left"
        android:paddingBottom="@dimen/padding_size"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="@dimen/padding_size"
        android:text="@string/logo_play_call"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_normal_size" />

</RelativeLayout>